<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/_142sdp"
    android:layout_height="@dimen/_170sdp"
    android:background="@drawable/business_type_background"
    android:elevation="@dimen/_16sdp"
    android:orientation="vertical"
    android:padding="@dimen/_14sdp">

    <ImageView
        android:id="@+id/business_type_image_view"
        android:layout_width="@dimen/_100sdp"
        android:layout_height="@dimen/_100sdp"
        android:layout_gravity="center"
        android:src="@drawable/facility" />

    <TextView
        android:id="@+id/business_type_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/_8sdp"
        android:text="@string/property_management"
        android:textSize="@dimen/_14ssp"
        android:textStyle="bold" />

</LinearLayout>